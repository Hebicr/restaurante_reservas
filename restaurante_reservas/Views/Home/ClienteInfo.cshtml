

@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="height: auto; width: auto; ">
    <div style=" height: auto; width: auto; margin: 0px auto; ">
        @*<h2>Login</h2>*@
        <br />
        <br />
        <form action="@Url.Action("ActualizarCliente","Home")" method="post">
            <div class="form-horizontal form-group-sm col-md-8 col-md-offset-2">
                @if (@ViewBag.infoCliente != null)
                {
                    foreach (var item in @ViewBag.infoCliente)
                    {
                        <h2>Registro</h2>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group col-md-6">
                            @Html.Label("Cedula", "Cedula", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.Hidden("id", "id", new { htmlAttributes = new { @class = "form-control", @required = "required", @maxlength = "15", @readonly = "readonly", @Value = item.id, @hidden = "hidden" } })
                                @Html.Editor("Cedula", "Cedula", new { htmlAttributes = new { @class = "form-control", @required = "required", @maxlength = "15", @readonly = "readonly", @Value = item.Cedula } })
                                @Html.ValidationMessage("Cedula", "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            @*@Html.LabelFor(model => model.FechadeNacimiento, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            @Html.Label("Fecha de Nacimiento", "Fecha de Nacimiento", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.Editor("Fecha de Nacimiento", "Fecha de Nacimiento", new { htmlAttributes = new { @class = "form-control", @required = "required", @readonly = "readonly", @maxlength = "8", @Value = @item.FechadeNacimiento.ToString(string.Format("dd/MM/yyyy")) } })
                                @Html.ValidationMessage("Fecha de Nacimiento", "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            @Html.Label("Nombre", "Nombre", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.Editor("Nombre", "Nombre", new { htmlAttributes = new { @class = "form-control", @required = "required", @maxlength = "49", @Value = item.Nombre } })
                                @Html.ValidationMessage("Nombre", "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            @*@Html.LabelFor(model => model.TelefonoPrincipal, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            @Html.Label("Telefono Principal", "Telefono Principal", htmlAttributes: new { @class = "control-label col-md-4" })

                            <div class="col-md-8">
                                @Html.Editor("Telefono Principal", "Telefono Principal", new { htmlAttributes = new { @class = "form-control", @required = "required", @maxlength = "8", @Value = item.TelefonoPrincipal } })
                                @Html.ValidationMessage("Telefono Principal", "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            @*@Html.LabelFor(model => model.PrimerApellido, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            @Html.Label("Primer Apellido", "Primer Apellido", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.Editor("Primer Apellido", "Primer Apellido", new { htmlAttributes = new { @class = "form-control", @required = "required", @maxlength = "49", @Value = item.PrimerApellido } })
                                @Html.ValidationMessage("Primer Apellido", "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            @*@Html.LabelFor(model => model.CorreoElectronico, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            @Html.Label("Correo Electronico", "Correo Electronico", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.Editor("Correo Electronico", "Correo Electronico", new { htmlAttributes = new { @class = "form-control", @required = "required", @type = "email", @maxlength = "99", @Value = item.CorreoELectronico } })
                                @Html.ValidationMessage("Correo Electronico", "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            @*@Html.LabelFor(model => model.SegundoApellido, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            @Html.Label("Segundo Apellido", "Segundo Apellido", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.Editor("Segundo Apellido", "Segundo Apellido", new { htmlAttributes = new { @class = "form-control", @required = "required", @maxlength = "49", @Value = item.SegundoApellido } })
                                @Html.ValidationMessage("Segundo Apellido", "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-5 col-md-8">
                                <input type="submit" value="Actualizar" class="btn btn-success" />
                                @*<input type="button" value="Cancelar" class="btn btn-danger" onclick="location.href='@Url.Action("Login","Login")';" />*@
                            </div>
                            <br />
                            <div class="col-md-offset-2 col-md-8">
                                @if (ViewData["Mensaje"] != null)
                                {
                                    <div class="alert alert-success" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                }

                                @if (ViewData["Error"] != null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Error"]
                                    </div>
                                }

                                @if (TempData["info"] != null)
                                {
                                    <div class="alert alert-success" role="alert">
                                        @TempData["info"]
                                    </div>
                                }
                                @if (TempData["error"] != null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @TempData["error"]
                                    </div>
                                }
                            </div>

                        </div>
                    }
                }

            </div>
            <br />
        </form>
    </div>
</div>


@section scripts{
    <script>
        $(document).ready(function () {

            $("#Cedula").bind('keypress', function (event) {
                var regex = new RegExp("^[0-9]+$");
                var key = String.fromCharCode(!event.charCode ? event.which : event.charCode);
                if (!regex.test(key)) {
                    event.preventDefault();
                    return false;
                }
            });

            $("#TelefonoPrincipal").bind('keypress', function (event) {
                var regex = new RegExp("^[0-9]+$");
                var key = String.fromCharCode(!event.charCode ? event.which : event.charCode);
                if (!regex.test(key)) {
                    event.preventDefault();
                    return false;
                }
            });

        });
    </script>
}
