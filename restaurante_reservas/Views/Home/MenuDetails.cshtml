    @*<h4>sp_Seleccionar_Menu_Result</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.platillo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.platillo)
