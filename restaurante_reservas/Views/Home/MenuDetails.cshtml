<p>
    @*@Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Atras", "AdminMenu")*@
    <a class="btn btn-danger btn-sm" href='@Url.Action("AdminMenu", "Home") '>Atras</a>
    <a class="btn btn-warning btn-sm" href='@Url.Action("MenuEdit", "Home",new { id = Model.id }) '>Editar</a>


</p>

<div class="col-md-offset-2 col-md-8">
    @if (ViewData["Mensaje"] != null)
    {
        <div class="alert alert-success" role="alert">
            @ViewData["Mensaje"]
        </div>
    }

    @if (ViewData["Error"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewData["Error"]
        </div>
    }

    @if (TempData["info"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["info"]
        </div>
    }
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["error"]
        </div>
    }
</div>


