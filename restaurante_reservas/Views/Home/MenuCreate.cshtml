@model restaurante_reservas.Models.Menu

@{
    ViewBag.Title = "Menu Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>MenuCreate</h2>*@

@using (Html.BeginForm("MenuCreate", "Home",FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" style="">
        <h4>Menu</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.platillo, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.platillo, new { htmlAttributes = new { @class = "form-control", @required = "required", @maxlength = "40" } })
                @Html.ValidationMessageFor(model => model.platillo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.descripcion, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control", @required = "required", @maxlength = "49" } })
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group file-upload-wrapper">
            @Html.LabelFor(model => model.img, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @*@Html.EditorFor(model => model.img, new { htmlAttributes = new { @class = "form-control", @type = "file", @accept = "image/JPEG" } })*@
                <input type="file" id="photo" name="photo" class="form-control" accept="image/JPEG" />
                @Html.ValidationMessageFor(model => model.img, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.id_Categoria, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @*@Html.EditorFor(model => model.id_Categoria, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownListFor(model => model.id_Categoria, ViewBag.categoriaList as SelectList, "-- Seleccione una Categoria --", new { @class = "form-control", @required = "required" })

                @Html.ValidationMessageFor(model => model.id_Categoria, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.id_Estado, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @*@Html.EditorFor(model => model.id_Estado, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownListFor(model => model.id_Estado, ViewBag.estadoList as SelectList, "-- Seleccione un Estado --", new { @class = "form-control", @required = "required" })

                @Html.ValidationMessageFor(model => model.id_Estado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success btn-sm" />
                <a class="btn btn-danger btn-sm" href='@Url.Action("AdminMenu", "Home") '>Cancelar</a>
            </div>
        </div>
    </div>
}

