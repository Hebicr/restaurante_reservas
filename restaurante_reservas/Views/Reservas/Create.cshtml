@model restaurante_reservas.Models.Reservas

@{
    ViewBag.Title = "Crear Reserva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear Reserva</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>Reservas</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.fecha, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local", @maxlength = "8", @required = "required" } })
                @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Cliente", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @*@Html.EditorFor(model => model.id_Cliente, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownListFor(model => model.id_Cliente, ViewBag.clientesList as SelectList, "-- Seleccione Cliente --", new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(model => model.id_Cliente, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Cantidad Personas", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.cantidad_personas, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.cantidad_personas, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Atras", "AdminReservas")
</div>
